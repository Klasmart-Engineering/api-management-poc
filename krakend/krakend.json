{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default"
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "name": "krakend",
  "port": 443,
  "endpoints": [
    {
      "endpoint": "/v1/starwars/{person_number}",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://login.sso.kidsloop.live/8dc632b7-4df1-4904-a155-7c4663e345bb/b2c_1a_relying_party_sign_up_log_in/discovery/v2.0/keys",
          "issuer": "https://login.sso.kidsloop.live/8dc632b7-4df1-4904-a155-7c4663e345bb/v2.0/"
        }
      },
      "backend": [
        {
          "url_pattern": "api/people/{person_number}",
          "encoding": "json",
          "method": "GET",
          "extra_config": {},
          "host": ["https://swapi.dev"],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
