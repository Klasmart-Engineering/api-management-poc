{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 2,
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default"
    },
    "github_com/devopsfaith/krakend/transport/http/server/handler": {
      "name": [ "krakend-wildcard" ],
      "krakend-wildcard": {
        "endpoints": {
          "/__wildcard/starwars": [ "/sw" ]
        }
      }
    }
  },
  "plugin": {
    "pattern": ".so",
    "folder": "/opt/krakend/plugins/"
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "name": "krakend",
  "port": 443,
  "endpoints": [
    {
      "endpoint": "/starwars/{person_number}",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        {{ template "jwks-validation-plugin.tmpl" .auth }},
        "plugin/req-resp-modifier": {
          "name": ["krakend-debugger-request", "krakend-debugger-response"]
        }
      },
      "backend": [
        {
          "url_pattern": "api/people/{person_number}",
          "encoding": "json",
          "method": "GET",
          "extra_config": {},
          "host": ["https://swapi.dev"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/github/user/{userId}",
      "method": "GET",
      "extra_config": {
        {{ template "jwks-validation-plugin.tmpl" .auth }}
      },
      "output_encoding": "json",
      "concurrent_calls": 1,
      "backend": [
        {
          "method": "GET",
          "host": ["https://api.github.com"],
          "url_pattern": "/users/{userId}"
        }
      ]
    },
    {
      "endpoint": "/products/{id}",
      "method": "GET",
      "extra_config": {},
      "output_encoding": "json",
      "concurrent_calls": 1,
      "backend": [
        {
          "method": "GET",
          "host": ["details.bookinfo.svc:9080"],
          "url_pattern": "/details/{id}"
        }
      ]
    },
    {
      "endpoint": "/__wildcard/starwars",
      "headers_to_pass": [ "X-Krakend-Wildcard" ],
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "api",
          "encoding": "json",
          "host": ["https://swapi.dev"],
          "disable_host_sanitize": false,
          "extra_config": {
            "github.com/devopsfaith/krakend/transport/http/client/executor": {
                "name": "krakend-wildcard"
              }
          }
        }
      ]
    }
  ]
}
